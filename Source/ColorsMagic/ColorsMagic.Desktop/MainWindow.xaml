<Window x:Class="ColorsMagic.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorsMagic.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="RootContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Viewbox 
            Stretch="Uniform"
            MaxWidth="{Binding ElementName=RootContainer, Path=ActualWidth}"
            MaxHeight="{Binding ElementName=RootContainer, Path=ActualHeight}">
                <Grid Name="GameGrid">

                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
